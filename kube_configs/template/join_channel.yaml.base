---
apiVersion: v1
kind: Pod
metadata:
  name: joinchannel
spec:
  restartPolicy: "Never"
  volumes: 
  - name: shared
    hostPath:
      path: /tmp
#      volumes: 
#      - name: shared
#        persistentVolumeClaim:
#          claimName: shared
        
  containers:
  - name: joinchannel
    image: marshall628/fabric_utils:x86_64-0.1.1
    imagePullPolicy: Always
    command: ["bash", "-c", "/shared/utils/join_channel.sh || true && while [ 1 ]; do sleep 100; done;"]
    env:
    - name: CHANNEL_NAME
      value: "channel1"
    - name: CORE_PEER_NETWORKID
      value: nid1
    - name: ORDERER_URL
      value: %PRIVATEIP%:31010
    - name: CORE_PEER_ADDRESS
      value: %PRIVATEIP%:31020
    - name: CORE_PEER_LOCALMSPID
      value: Org1MSP
    - name: CORE_PEER_MSPCONFIGPATH
      value: /shared/crypto-config/peerOrganizations/peerOrg1/peers/peerOrg1Peer1/
    volumeMounts:
    - mountPath: /shared
      name: shared
